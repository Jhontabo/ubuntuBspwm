[module:xkeyboard]
; Muestra diseño de teclado activo
type = internal/xkeyboard

blacklist-0 = num lock  ; excluir indicadores específicos

format-prefix = " "
format-prefix-foreground = #666

label-layout = %layout%

label-indicator-padding = 2
label-indicator-background = ${colors.accent}

[module:xwindow]
; Muestra título de la ventana activa
type = internal/xwindow
format = <label>
label-maxlen = 75

[module:counter]
; Ejemplo de módulo contador simple
type = internal/counter
