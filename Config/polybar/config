; =============================================================================
; CONFIGURACIÓN PRINCIPAL DE POLYBAR
; =============================================================================
; Este archivo define la configuración base de polybar para el gestor de ventanas bspwm
; NOTA: Esta config parece haber sido escrita para una versión no released de polybar
; puede que no funcione correctamente en todas las versiones
;

[colors]
; Colores principales de la barra
; background: color de fondo con transparencia (cc = alpha 80%)
; foreground: color del texto principal
; linecolor: color de líneas decorativas (underline/overline)
; bordercolor: color del borde
; accent: color de acento para elementos destacados
background = #ccfafafa
foreground = #444
linecolor = #fb2e22
bordercolor = #555
accent = #e60053

[settings]
; Configuración global del comportamiento de polybar
; throttle: limita la frecuencia de actualizaciones para mejorar rendimiento
;throttle-output-for = 10    ; ms a esperar antes de enviar actualizaciones de salida
;throttle-output = 5        ; número de eventos a tragar antes de enviar
;throttle-input-for = 40    ; ms a esperar entre procesamiento de eventos
screenchange-reload = true  ; recargar config al cambiar de monitor
;compositing-background = screen
;compositing-foreground = xor
;compositing-border = over

[global/wm]
; Margenes para la barra - ajusta el espacio entre la barra y el borde de la pantalla
margin-top = 0
margin-bottom = 0

; =============================================================================
; DEFINICIÓN DE BARRAS
; =============================================================================
; polybar puede definir múltiples barras, cada una con su propia configuración
; Las barras heredan de [bar/top] o se definen completamente
;

[bar:top]
; BARRA PRINCIPAL SUPERIOR
; enable-ipc: habilita comunicación entre polybar y otros procesos (requerido para bspwm)
enable-ipc = true
;monitor = ${env:MONITOR:eDP1}  ; monitor específico (descomenta y ajusta si es necesario)
width = 100%    ; ancho de la barra (porcentaje o pixels)
height = 24     ; altura en pixels

background = ${colors.background}  ; color de fondo (referencia a sección colors)
foreground = ${colors.foreground}  ; color de texto

; Decoración: línea debajo y encima de la barra
underline-color = ${colors.linecolor}
underline-size = 1
overline-color = ${colors.linecolor}
overline-size = 2

; Borde inferior
border-bottom-size = 1
border-bottom-color = ${colors.bordercolor}

; Espaciado interno
padding-left = 0
padding-right = 2
module-margin-left = 1   ; espacio antes de cada módulo
module-margin-right = 2 ; espacio después de cada módulo

; Fuentes disponibles - formato: nombre_fuente:tamaño;offset_vertical
font-0 = ypn envypn:size=10;2
font-1 = siji:pixelsize=10;2
font-2 = termsynu:size=8;2

; Módulos organizados en tres zonas: izquierda, centro, derecha
modules-left = bspwm i3           ; gestión de ventanas
;modules-center = mpd            ; música (comentado)
modules-center = xwindow         ; título de ventana activa
modules-right = xkeyboard xbacklight volume wifi battery memory cpu date
; ^ teclado | brillo | volumen | wifi | batería | memoria | cpu | fecha

; Bandeja del sistema (system tray) - área para iconos de aplicaciones
tray-position = right      ; posición: left, right, center, none
tray-padding = 4           ; espacio alrededor de los iconos
tray-maxsize = 16          ; tamaño máximo de iconos
;tray-transparent = true
;tray-detached = true
;tray-offset-x = 50

; wm-restack: indica a polybar que se apile sobre el gestor de ventanas
; necesario para que la barra no sea tapada por ventanas maximizadas
wm-restack = bspwm

;dim-value = 0.2

; Acciones al hacer click en la barra (espacio vacío)
;click-left =
;click-middle =
;click-right =

; Scroll cambia escritorio (funcional con bspwm/i3)
scroll-up = bspwm-deskprev    ; ir al escritorio anterior
scroll-down = bspwm-desknext   ; ir al siguiente escritorio
;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev
;double-click-left = notify-send -u low doubleclick
;double-click-right = notify-send -u low doubleclick2

; Variables específicas para módulos bspwm
bspwm-focused-overline = ${colors.linecolor}
bspwm-focused-underline = #cc333333

[bar/bottom]
; BARRA INFERIOR - hereda toda la configuración de [bar/top]
inherit = bar/top

enable-ipc = true
monitor = ${env:MONITOR:DP-2}  ; monitor secundario (ajusta a tu configuración)
bottom = true  ; posicionar en la parte inferior de la pantalla

; Intercambiar tamaño de líneas decorativas (underline <-> overline)
underline-size = ${bar/top.overline-size}
overline-size = ${bar/top.underline-size}

modules-left = bspwm i3
modules-center =    ; centro vacío en esta barra
modules-right = github fs-root date power-menu
; ^ github notifications | espacio en disco | fecha | menú de apagado

wm-restack = ${bar/top.wm-restack}

tray-position = none  ; sin bandeja del sistema en esta barra

; =============================================================================
; MÓDULOS EXTERNOS
; =============================================================================
; Módulos que requieren configuración adicional o servicios externos
;

[module:github]
; Muestra notificaciones de GitHub
type = internal/github
; ERROR: La ruta del token es incorrecta - /home/jaagr/ no existe
; token = ${file:/home/jaagr/.git-token}
; Solución: usa una ruta válida o elimina si no necesitas notificaciones de github
;empty-notifications = true
label = %notifications%
label-padding = 2
label-background = #f0c209
label-foreground = #000

[module:fs-root]
; Muestra espacio usado en el disco raíz
type = internal/fs
mount-0 = /  ; monitorear raíz
label-mounted = %{F#e60053}%percentage_used%%%{F-} used of %mountpoint%

; =============================================================================
; MÓDULOS DE GESTIÓN DE VENTANAS
; =============================================================================
; Integración con bspwm e i3 para mostrar workspaces/escritorios virtuales
;

[module:bspwm]
; Muestra el estado de los workspaces en bspwm
type = internal/bspwm
enable-scroll = false  ; deshabilitar scroll para no conflictuar con scroll de módulos
format = <label-state> <label-mode>
;format = <label-monitor> <label-state> <label-mode>
;pin-workspaces = false

; Iconos para cada workspace (formato: número;icono)
ws-icon-0 = term;      ; workspace 1: terminal
ws-icon-1 = web;       ; workspace 2: navegador
ws-icon-2 = code;     ; workspace 3: código
ws-icon-3 = music;    ; workspace 4: música
ws-icon-4 = irssi;   ; workspace 5: chat
ws-icon-default =      ; icono por defecto para workspaces no definidos

inline-mode = true  ; mostrar iconos en línea (sin boxes)

; Estilos para cada estado de workspace
label-focused = %icon%           ; workspace activo
label-focused-background = #fff
label-focused-foreground = #383838
label-focused-overline = ${root.bspwm-focused-overline}
label-focused-padding = 2

label-occupied = %icon%          ; workspace con ventanas
label-occupied-padding = 2
label-occupied-foreground = #444

label-urgent = %icon%            ; workspace con ventana urgente
label-urgent-background = #bd2c40
label-urgent-padding = 2

label-empty = %icon%             ; workspace vacío
label-empty-foreground = #55
label-empty-padding = 2

; Modos de ventana bspwm (monocle, floating, locked, sticky, private)
label-monocle = 
label-monocle-padding = 2
label-monocle-background = #171717
label-monocle-foreground = ${colors.accent}

label-floating = 
label-floating-padding = 2
label-floating-background = #171717
label-floating-foreground = ${colors.accent}

label-locked = locked
label-locked-padding = 1
label-sticky = sticky
label-sticky-padding = 1
label-private = private
label-private-padding = 1
;label-pseudotiled = pseudo
;label-pseudotiled-padding = 2
;label-pseudotiled-background = #f09
;label-tiled = tiled
;label-tiled-padding = 2
;label-tiled-background = #f90

; Estilo cuando la ventana no está enfocada
label-dimmed-background = ${root.background}
label-dimmed-overline = ${root.background}
label-dimmed-underline = ${root.background}
label-dimmed-active-foreground = #f00

[module:i3]
; Muestra workspaces en i3 (funciona parcialmente con bspwm)
type = internal/i3
index-sort = true      ; ordenar por número de índice
pin-workspaces = true   ; mantener workspaces en su posición
wrapping-scroll = true  ; scroll ciclo entre workspaces
;reverse-scroll = false
;enable-scroll = false

format = <label-state> <label-mode>

label-mode = %mode%
label-mode-padding = 2
label-mode-background = ${colors.accent}

label-focused = %index%
label-focused-background = ${module/bspwm.label-focused-background}
label-focused-foreground = ${module/bspwm.label-focused-foreground}
label-focused-overline= ${module/bspwm.label-focused-overline}
label-focused-underline= ${module/bspwm.label-focused-underline}
label-focused-padding = ${module/bspwm.label-focused-padding}

label-unfocused = %index%
label-unfocused-padding = ${module/bspwm.label-occupied-padding}

label-urgent = %index%!
label-urgent-background = ${module/bspwm.label-urgent-background}
label-urgent-padding = ${module/bspwm.label-urgent-padding}

label-visible = %index%
label-visible-padding = ${module/bspwm.label-empty-padding}

; =============================================================================
; MÓDULOS DE HARDWARE Y SISTEMA
; =============================================================================

[module:cpu]
; Muestra uso de CPU
type = internal/cpu
interval = 2  ; actualizar cada 2 segundos
label = %percentage%%  ; porcentaje de uso
format-prefix = " "
format-prefix-foreground = #666

[module:memory]
; Muestra uso de memoria RAM
type = internal/memory
interval = 2
label = %percentage_used%%
format-prefix = " "
format-prefix-foreground = #666

[module:wifi]
; Muestra estado de conexión WiFi
type = internal/network
interface = net1  ; interfaz de red WiFi (ajusta: puede ser wlan0, wifi0, etc.)
interval = 3.0
;udspeed-minwidth = 0

format-connected = <ramp-signal> <label-connected>
format-connected-prefix = " "
format-connected-prefix-foreground = #666
format-connected-prefix-offset = -6
label-connected = %downspeed:8%

;format-disconnected = <label-disconnected>
;format-disconnected-prefix = " "
;format-disconnected-prefix-foreground = #666
;label-disconnected = not connected
;label-disconnected-foreground = #999

; Indicadores de señal (iconos que varían según intensidad)
ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = #666

[module:wired]
; Muestra conexión ethernet por cable
type = internal/network
interface = net0  ; interfaz ethernet (ajusta: puede ser eth0, enp0s3, etc.)
interval = 3.0

format-connected-prefix = " "
format-connected-prefix-foreground = #666
label-connected = %local_ip%

;format-disconnected = <label-disconnected>
;format-disconnected-prefix = " "
;format-disconnected-prefix-foreground = #666
;label-disconnected = not connected
;label-disconnected-foreground = #999

[module:date]
; Muestra fecha y hora
type = internal/date
label = %{F#666}%{F-} %date%  %{F#e60053}%{F-} %time%
date = %Y-%m-%d
time = %H:%M
interval = 5

[module:xbacklight]
; Muestra nivel de brillo de pantalla
type = internal/xbacklight
format = <ramp> <label>
ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = #666
label-foreground = ${root.foreground}

[module:volume]
; Muestra y controla volumen de audio
type = internal/volume
speaker-mixer = Speaker       ; nombre del mezclador de altavoz
headphone-mixer = Headphone   ; nombre del mezclador de auriculares
headphone-id = 9              ; ID de los auriculares (ALSA)

format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%%
label-volume-foreground = ${root.foreground}

format-muted-prefix = " "
format-muted-foreground = #777
label-muted = sound muted

; Iconos según nivel de volumen
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 
ramp-volume-foreground = #666

ramp-headphones-0 = 
ramp-headphones-1 = 
ramp-headphones-foreground = #666

[module:battery]
; Muestra estado de batería
type = internal/battery
full-at = 98           ; considerar llena al 98%
time-format = %H:%M   ; formato de tiempo restante

format-charging = <animation-charging> <label-charging>
label-charging = %percentage%% %time%

format-discharging = <ramp-capacity> <label-discharging>
label-discharging = %percentage%% %time%

format-full = <label-full>
format-full-prefix = " "
format-full-prefix-foreground = #666

; Iconos según nivel de batería
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-foreground = #666

; Animación de carga
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-foreground = #666
animation-charging-framerate = 750

;[module:battery-multi]
;type = custom/script
;exec = "count=$(acpi -b | wc -l); sum=$(acpi -b | egrep -o '[0-9]{1,3}%' | tr -d '%' | xargs -I% echo -n '+%'); echo $(date +%s) Avg capacity: $(( sum / count ))%"
;exec-if = pgrep -x watch
;interval = 3

